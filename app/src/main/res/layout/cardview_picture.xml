<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_cardview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    app:cardCornerRadius="@dimen/radius_cardview"
    android:background="@color/black"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black">
        <TextView
            android:id="@id/userCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card1"
            android:textColor="@color/editColorWhite"
            android:textSize="@dimen/textSize_card"
            />
        <ImageView
            android:id="@id/cardImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pizza1"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@id/userCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userCard1"
            android:textColor="@color/editColorWhite"
            android:textSize="@dimen/textSize_card"
            />



    </LinearLayout>


</androidx.cardview.widget.CardView>